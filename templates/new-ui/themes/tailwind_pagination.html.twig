{% if pageCount > 1 %}
<div class="flex items-center justify-between sm:px-6">
    <div class="flex-1 flex justify-between sm:hidden">
        {% if previous is defined %}
            <a rel="previous" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
               class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:text-gray-500">
                Previous
            </a>
        {% else %}
            <span></span>
        {% endif %}
        {% if next is defined %}
            <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}"
               class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:text-gray-500">
                Next
            </a>
        {% endif %}
    </div>
    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
            Showing
            <span class="font-medium">{{ (current - 1) * numItemsPerPage + 1 }}</span>
            to
            <span class="font-medium">{{ current == endPage ? totalCount : current * numItemsPerPage }}</span>
            of
            <span class="font-medium">{{ totalCount }}</span>
            results
        </div>
        <div>
            <nav class="relative z-0 inline-flex shadow-sm -space-x-px" aria-label="Pagination">
                {% if previous is defined %}
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
                   class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                    <span class="sr-only">Previous</span>
                    <!-- Heroicon name: solid/chevron-left -->
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                         aria-hidden="true">
                        <path fill-rule="evenodd"
                              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
                {% endif %}

                {% if first is defined and current != first and first not in pagesInRange %}
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}"
                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        {{ first }}
                    </a>
                {% endif %}

                {% if first is defined and current != first and 2 not in pagesInRange %}
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                      ...
                    </span>
                {% endif %}

                {% for page in pagesInRange %}
                    {% if page != current %}
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}"
                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        {{ page }}
                    </a>
                    {% else %}
                        <span
                           class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            {{ page }}
                        </span>
                    {% endif %}
                {% endfor %}

                {% if last is defined and current != last and (last - 1) not in pagesInRange %}
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                      ...
                    </span>
                {% endif %}

                {% if last is defined and current != last and last not in pagesInRange %}
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}"
                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        {{ last }}
                    </a>
                {% endif %}

                {% if next is defined %}
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}"
                   class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                    <span class="sr-only">Next</span>
                    <!-- Heroicon name: solid/chevron-right -->
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                         aria-hidden="true">
                        <path fill-rule="evenodd"
                              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
                {% endif %}
            </nav>
        </div>
    </div>
</div>
{% else %}
    <div>
        {% set from = (current - 1) * numItemsPerPage + 1 %}
        {% set to = current == endPage ? totalCount : current * numItemsPerPage %}
        {{ 'label.showing_results' | trans({'from': from, 'to': to, 'total': totalCount}) }}
    </div>
{% endif %}
