{% set currentPath = app.request.requestUri %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{{ APP_NAME }}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('/favicon.ico') }}">
    <meta name="theme-color" content="#ffffff">
</head>
<body>
<div class="min-h-screen flex flex-col">
    <div
        x-data="{ mobilemenu: false, langmenu: false }"
        class="relative bg-white"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6">
            <div
                class="flex justify-between items-center py-6 md:justify-start md:space-x-10"
            >
                <div class="w-0 flex-1">
                    <a href="{{ path('app_info_index') }}" class="text-4xl font-black align-middle">{{ APP_NAME }}</a>
                    <img
                        class="h-8 w-auto sm:h-10 ml-5 inline-block"
                        src="https://www.surf.nl/themes/surf/logo.svg"
                        alt="Logo"
                    />
                </div>
                <div class="-mr-2 -my-2 md:hidden">
                    <button
                        @click="langmenu = true"
                        type="button"
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out"
                    >
                        <svg
                            class="h-6 w-6"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M7 2a1 1 0 011 1v1h3a1 1 0 110 2H9.578a18.87 18.87 0 01-1.724 4.78c.29.354.596.696.914 1.026a1 1 0 11-1.44 1.389c-.188-.196-.373-.396-.554-.6a19.098 19.098 0 01-3.107 3.567 1 1 0 01-1.334-1.49 17.087 17.087 0 003.13-3.733 18.992 18.992 0 01-1.487-2.494 1 1 0 111.79-.89c.234.47.489.928.764 1.372.417-.934.752-1.913.997-2.927H3a1 1 0 110-2h3V3a1 1 0 011-1zm6 6a1 1 0 01.894.553l2.991 5.982a.869.869 0 01.02.037l.99 1.98a1 1 0 11-1.79.895L15.383 16h-4.764l-.724 1.447a1 1 0 11-1.788-.894l.99-1.98.019-.038 2.99-5.982A1 1 0 0113 8zm-1.382 6h2.764L13 11.236 11.618 14z"
                                clip-rule="evenodd"
                            />
                        </svg>
                    </button>

                    <button
                        @click="mobilemenu = true"
                        type="button"
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out"
                    >
                        <!-- Heroicon name: menu -->
                        <svg
                            class="h-6 w-6"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"
                            />
                        </svg>
                    </button>
                </div>

                <nav class="hidden md:flex md:justify-end">
                    <div class="relative">
                        <!-- Item active: "text-gray-900", Item inactive: "text-gray-500" -->
                        <button
                            @click="langmenu = true"
                            type="button"
                            class="text-gray-500 mr-6 group inline-flex items-center space-x-2 text-base leading-6 font-medium hover:text-gray-900 focus:outline-none focus:text-gray-900 transition ease-in-out duration-150"
                        >
                            <span>Language</span>
                            <!--
                                  Heroicon name: chevron-down

                                  Item active: "text-gray-600", Item inactive: "text-gray-400"
                            -->
                            <svg
                                class="text-gray-400 h-5 w-5 group-hover:text-gray-500 group-focus:text-gray-500 transition ease-in-out duration-150"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                        </button>
                        <div
                            x-show="langmenu"
                            @click.away="langmenu = false"
                            x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0 translate-y-1"
                            x-transition:enter-end="opacity-100 translate-y-0"
                            x-transition:leave="transition ease-in duration-150"
                            x-transition:leave-start="opacity-100 translate-y-0"
                            x-transition:leave-end="opacity-0 translate-y-1"
                            style="display: none"
                            class="absolute -ml-4 mt-3 transform px-2 w-screen max-w-max-content sm:px-0 lg:ml-0"
                        >
                            <div class="rounded-lg shadow-lg">
                                <div class="rounded-lg shadow-xs overflow-hidden">
                                    <div class="relative bg-white">
                                        <a
                                            href="{{ path('locale', {'lang': 'de', 'redirect': currentPath}) }}"
                                            class="px-6 py-4 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150"
                                        >
                                            <p class="text-base font-medium text-gray-900">
                                                Deutch
                                            </p>
                                        </a>
                                        <a
                                            href="{{ path('locale', {'lang': 'en', 'redirect': currentPath}) }}"
                                            class="px-6 py-4 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150"
                                        >
                                            <p class="text-base font-medium text-gray-900">
                                                English
                                            </p>
                                        </a>
                                        <a
                                            href="{{ path('locale', {'lang': 'es', 'redirect': currentPath}) }}"
                                            class="px-6 py-4 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150"
                                        >
                                            <p class="text-base font-medium text-gray-900">
                                                Español
                                            </p>
                                        </a>
                                        <a
                                            href="{{ path('locale', {'lang': 'nl', 'redirect': currentPath}) }}"
                                            class="px-6 py-4 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150"
                                        >
                                            <p class="text-base font-medium text-gray-900">
                                                Nederlands
                                            </p>
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <a
                            href="{{ path('app_manage_index') }}"
                            class="mt-4 inline-flex px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition ease-in-out duration-150"
                        >
                            {{ 'button.login'|trans({'%value%': APP_IDP_NAME}) }}
                        </a>
                    </div>
                </nav>
            </div>
        </div>

        <div
            x-show="langmenu"
            @click.away="langmenu = false"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 translate-y-1"
            x-transition:enter-end="opacity-100 translate-y-0"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 translate-y-0"
            x-transition:leave-end="opacity-0 translate-y-1"
            style="display: none"
            class="absolute z-20 inset-x-0 p-2 transition transform origin-top-right md:hidden"
        >
            <div class="rounded-lg shadow-lg">
                <div class="rounded-lg shadow-xs overflow-hidden">
                    <div class="relative bg-white">
                        <a
                            href="#"
                            class="px-6 py-4 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150"
                        >
                            <p class="text-base font-medium text-gray-900">English</p>
                        </a>
                        <a
                            href="#"
                            class="px-6 py-4 flex items-start rounded-lg hover:bg-gray-50 transition ease-in-out duration-150"
                        >
                            <p class="text-base font-medium text-gray-900">Español</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- start:mobilemenu -->
        <div
            x-show="mobilemenu"
            @click.away="mobilemenu = false"
            style="display: none"
            x-transition:enter="duration-200 ease-out"
            x-transition:enter-start="opacity-0 transform scale-90"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="ease-in duration-100"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 scale-95"
            class="absolute top-0 inset-x-0 p-2 transition transform origin-top-right md:hidden"
        >
            <div class="rounded-lg shadow-lg">
                <div
                    class="rounded-lg shadow-xs bg-white divide-y-2 divide-gray-50"
                >
                    <div class="pt-5 pb-6 px-5 space-y-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <a href="#" class="text-4xl font-black align-middle"
                                >edulnk</a
                                >
                                <img
                                    class="h-8 w-auto sm:h-10 ml-5 inline-block"
                                    src="https://www.surf.nl/themes/surf/logo.svg"
                                    alt="Logo"
                                />
                            </div>
                            <div class="-mr-2">
                                <button
                                    @click="mobilemenu = false"
                                    type="button"
                                    class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out"
                                >
                                    <!-- Heroicon name: x -->
                                    <svg
                                        class="h-6 w-6"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M6 18L18 6M6 6l12 12"
                                        />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div>
                            <nav class="grid gap-y-8">
                                <a
                                    href="#"
                                    class="-m-3 p-3 flex items-center space-x-3 rounded-md hover:bg-gray-50 transition ease-in-out duration-150"
                                >
                                    <!-- Heroicon name: home -->
                                    <svg
                                        class="flex-shrink-0 h-6 w-6 text-blue-600"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                        />
                                    </svg>
                                    <div
                                        class="text-base leading-6 font-medium text-gray-900"
                                    >
                                        Home
                                    </div>
                                </a>
                            </nav>
                        </div>
                    </div>
                    <div class="py-6 px-5 space-y-6">
                        <div class="space-y-6">
                  <span class="w-full flex rounded-md shadow-sm">
                    <a
                        href="{{ path('app_manage_index') }}"
                        class="w-full flex items-center justify-center px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition ease-in-out duration-150"
                    >
                      {{ 'button.login'|trans({'%value%': APP_IDP_NAME}) }}
                    </a>
                  </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end:mobilemenu -->
    </div>
    <!-- start:hero -->
    <div class="bg-gray-50">
        <div
            class="flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8"
        >
            <div class="max-w-md w-full">
                <h1
                    class="mt-6 text-center text-4xl leading-snug font-extrabold text-gray-900"
                >
                {% block hero %}{% endblock %}
                </h1>
            </div>
        </div>
    </div>
    <!-- end:hero -->
    <!-- start:content -->
    <div class="flex flex-col flex-grow overflow-hidden">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="content my-20 sm:my-36">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
    <!-- end:content -->
    <!-- start:footer -->
    <footer class="footer relative bg-gray-800" data-testid="footer">
        <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6">
            <div
                class="flex flex-col sm:flex-row space-y-10 sm:space-y-0 justify-between items-center py-6 md:justify-start"
            >
                <div class="sm:w-1/3 sm:mt-0 sm:pr-4">
                    <a href="{{ path('app_info_index') }}" class="text-4xl text-white font-black align-middle">
                       {{ APP_NAME }}
                    </a>
                </div>
                <div class="sm:w-1/3">
                    <div class="text-sm text-white">
                        <div
                            class="flex flex-col sm:flex-row space-y-5 sm:space-y-0 text-center justify-center"
                        >
                            <a class="mx-3" href="{{ path('app_info_index') }}">{{ 'menu.home'|trans }}</a>
                            <a class="mx-3" href="{{ path('app_info_about') }}">{{ 'menu.about'|trans }}</a>
                            <a class="mx-3" href="{{ path('app_info_support') }}">{{ 'menu.support'|trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="sm:w-1/3">
                    <img
                        class="h-8 sm:h-10 w-auto float-right"
                        src="https://www.surf.nl/themes/surf/logo.svg"
                        alt="Logo"
                    />
                </div>
            </div>
        </div>
    </footer>
</div>
<!-- end:footer -->

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</html>
