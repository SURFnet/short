{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - preview{% endblock %}

{% block body %}

  {% set shorturlshort = APP_URLDOMAIN ~ '/' ~ short %}
  {% set shorturlfull = APP_BASEDOMAIN ~ '/' ~ short %}

  <div class="row justify-content-center">
      <div class="col-sm">
      </div>
       <div class="col-sm-6 mb-4">
           <h2 class="mb-1">{{ shorturlshort }}</h2>

           <div class="mt-4">{{ 'short_url.refers_to' | trans({'shorturlshort': shorturlshort}) | raw }}</div>

           <div class="m-2"><code>{{ long }}</code></div>

           <div>
               <a href="{{ shorturlfull }}" class="btn btn-primary btn-lg mt-4 SCknop"><i class="fas fa-external-link-alt"></i>
                   {{ 'short_url.continue_to' | trans({'shorturlshort': shorturlshort}) }}
               </a>
           </div>
      </div>
      <div class="col-sm qrimage">
          <img src="/{{ short }}~" alt="{{ 'qr_code.alt_message' | trans({'shorturlshort': shorturlshort}) }}">
          <small>[
          {% for format in ['svg','pdf','eps','png'] %}
              {{ loop.first ? '' : '|' }}
              <a href="/{{ short }}~?format={{ format }}">{{ format }}</a>
          {% endfor %}
          ]</small>
      </div>
  </div>

{% endblock %}
