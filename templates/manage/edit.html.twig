{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - bewerken{% endblock %}

{% block body %}

  {% set shorturlshort = APP_URLDOMAIN ~ '/' ~ short_url.shortUrl %}
  {% set shorturlfull = 'https://' ~ shorturlshort %}

    <div class="row">
      <div class="col-md-12 mb-4">
        <h4 class="mb-3">Link aanpassen voor {{ shorturlshort }}:</h4>
        <form class="needs-validation" action="{{ path('app_manage_edit') }}" method="post" novalidate>
          <input type="hidden" name="_token" value="{{ csrf_token('edit-form') }}">
          <input type="hidden" name="url" value="{{ short_url.shortUrl }}">
          <div class="mb-3">
             <div class="input-group">
               <div class="input-group-prepend">
                 <span class="input-group-text"><i class="fa fa-map-signs SURForanje"></i></span>
              </div>
              <input type="url" class="form-control" name="new_long_url" id="linkie" value="{{ short_url.longUrl }}" placeholder="Geef hier de nieuwe link (URL) in" required>
              <div class="invalid-feedback" style="width: 100%;margin-top:10px;">
                <i class="fa fa-exclamation-circle SURForanje"></i>   Type of plak hierboven een (correcte) URL.
              </div>
            </div>
          </div>
          <hr class="mb-3">
          <button class="btn btn-primary btn-lg btn-block SCknop" type="submit">Aanpassen</button>
        </form>
      </div>
    </div>


{% endblock %}
