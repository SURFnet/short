{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">

            {% if exception.class is defined and exception.class == 'App\\Exception\\ShortUserException' %}
                <h2 class="SCblauw">An error occurred</h2>
                <div class="alert alert-danger">{{ exception.message }}</div>
            {% else %}
                <h2>
                    {{ status_code }} {{ status_text }}</h2>
                <div class="error-details">
                    Sorry, an error has occured: {{ status_text }}.
                </div>
            {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

