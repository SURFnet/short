{% extends 'base.html.twig' %}

{%
    set parameters = {
    'app_name': APP_NAME,
    'app_urldomain': APP_URLDOMAIN,
    'app_idp_name': APP_IDP_NAME,
    'app_support_email': APP_SUPPORT_EMAIL
}
%}

{% block title %}{{ parent() }} - {{ 'menu.support' | trans }}{% endblock %}

{% block body %}
    {{ 'info.support' | trans(parameters, APP_CUSTOM_TRANSLATION ) | raw }}

    <p><a href="{{ path('app_info_index') }}">{{ 'button.back_to' | trans({'%value%': APP_URLDOMAIN}) }}</a></p>
{% endblock %}
